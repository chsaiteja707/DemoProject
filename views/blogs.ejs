<%- include ('./includes/head.ejs') %>
<%- include ('./includes/nav.ejs') %>
<div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
  <% blogs.forEach(function(blog) {%>
    <a href="http://localhost:<%= process.env.APPLICATION_PORT%>/blog/<%=blog._id %>" style="color: inherit;">
      <div class="col d-flex align-items-start">
        <div class="icon-square bg-light text-dark flex-shrink-0 me-3">
          <svg class="bi" width="1em" height="1em"><use xlink:href="#toggles2"></use></svg>
        </div>
        <div>
          <h2><%=blog.title %></h2>
          <img src="images/<%=blog.image %>" alt="..." srcset="" style="width: 250px; height: 250px;padding: 10px;">
          <p></p>
          <p><%=blog.description %></p>
          <p><%=blog.creationDate %></p>
          <p><%=blog.lastUpdatedDate %></p>
        </div>
      </div>
    </a>
  <% })%>
  </div>

    
